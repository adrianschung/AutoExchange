<div class="container">
  </br>
  <h1>Edit Vehicle</h1>
  </br>
  <%= simple_form_for @vehicle do |f| %>
    <%= f.input :type, collection: [ "Automobile", "Motorcycle", "Boat" ], selected: @vehicle.type %>
    <div class="row">
      <div class="col">
        <%= f.input :make, hint: false, placeholder: @vehicle.make %>
      </div>
      <div class="col">
        <%= f.input :model, hint: false, placeholder: @vehicle.model %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :color, hint: false, placeholder: @vehicle.color %>
      </div>
      <div class="col">
        <%= f.input :year, hint: false, placeholder: @vehicle.year %>
      </div>
    </div>
    <%= f.input :mileage, label: "Mileage (km)", hint: false, placeholder: @vehicle.mileage %>
    <%= f.input :price, input_html: {maxlength: 10 }, hint: false, placeholder: @vehicle.price %>
    <%= f.input :description, placeholder:@vehicle.description %>
    <%= f.submit 'Update', :class => "btn btn-secondary" %>
    <%= f.button :button, 'Reset', :type => 'reset', :class => 'btn btn-danger' %>
  <% end %>
</div>
