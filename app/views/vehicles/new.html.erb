<h1>List a Vehicle</h1>
</br>
<%= simple_form_for @vehicle do |f| %>
  <%= f.input :type, collection: [ "Automobile", "Motorcycle", "Boat" ], selected: "Automobile" %>
  <%= f.input :make, hint: false %>
  <%= f.input :model, hint: false %>
  <%= f.input :color %>
  <%= f.input :year, hint: false %>
  <%= f.input :mileage, label: "Mileage (km)", hint: false %>
  <%= f.input :price, input_html: {maxlength: 10 }, hint: false %>
  <%= f.input :description %>
  <%= f.submit 'Post' %>
<% end %>
