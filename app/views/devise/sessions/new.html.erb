<div class="container">
  <div class="login-page">
    <div class="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :login, autofocus: true, autocomplete: "email", placeholder: "username or email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
        </div>

        <div class="actions">
          <%= f.submit "Login" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
